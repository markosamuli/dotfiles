# EditorConfig: https://editorconfig.org

[*]
# it's recommend to keep these unchanged
end_of_line = lf
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

# Markdown
# https://github.com/google/styleguide/blob/gh-pages/docguide/style.md
[*.md]
trim_trailing_whitespace = false

# https://google.github.io/styleguide/vimscriptguide.xml
[{.vimrc,*.vim}]
indent_size = 4

[Makefile]
tab_width = 2
indent_style = tab

[.zshrc]
shell_variant      = zsh
switch_case_indent = true

[{.zshrc.*,*.zsh}]
indent_size = 4
shell_variant      = zsh
switch_case_indent = true

[.bashrc]
shell_variant      = bash
switch_case_indent = true

[{*.sh,*.bash}]
indent_size = 4
shell_variant      = bash
switch_case_indent = true

[*.py]
indent_size = 4

[*.go]
indent_size = 4

[*.proto]
indent_size = 2

[*.graphql]
indent_size = 2
